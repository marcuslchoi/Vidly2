@model Vidly2.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@*
    //create action in customers controller
    //wrap in using block so that object returned from beginform is disposed and renders closing </form> tag
*@
@using (Html.BeginForm("Create", "Customers"))
{
    @*Boostrap classes*@
    <div class="="form-group">
        @Html.LabelFor(m=>m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })   @*using textboxfor supports validation (ie string has to be 255 characters or less)*@
    </div>
    <div class="=" form-group">

        @*the "for" allows user to click on the label and cursor goes to birthdate field*@
        <label for="Birthdate">Date of Birth!</label>
        @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })   @*using textboxfor supports validation (ie string has to be 255 characters or less)*@
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) Subscribe to Newsletter?
        </label>
    </div>


}

